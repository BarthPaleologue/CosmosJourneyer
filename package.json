{
    "name": "cosmos-journeyer",
    "private": true,
    "version": "1.11.0-dev",
    "engines": {
        "node": ">=18.0.0",
        "pnpm": ">=8.0.0"
    },
    "description": "Cosmos Journeyer is a space exploration game featuring fully explorable planets, across millions of star systems. It is built using Babylon.JS, and a lot of passion.",
    "homepage": "https://cosmosjourneyer.com",
    "author": {
        "name": "Barthélemy Paléologue",
        "email": "barth.paleologue@cosmosjourneyer.com",
        "url": "https://barth.paleologue.fr"
    },
    "license": "AGPL-3.0-only",
    "type": "module",
    "repository": {
        "type": "git",
        "url": "https://github.com/BarthPaleologue/CosmosJourneyer"
    },
    "bugs": {
        "url": "https://github.com/BarthPaleologue/CosmosJourneyer/issues",
        "email": "barth.paleologue@cosmosjourneyer.com"
    },
    "keywords": [
        "space",
        "game",
        "exploration",
        "babylonjs",
        "procedural-generation",
        "webgl",
        "webgpu"
    ],
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "build": "pnpm --filter @cosmos-journeyer/game build",
        "serve": "pnpm --filter @cosmos-journeyer/game serve",
        "serve:prod": "pnpm --filter @cosmos-journeyer/game serve:prod",
        "format:check": "pnpm --filter @cosmos-journeyer/game format:check",
        "format": "pnpm --filter @cosmos-journeyer/game format",
        "test:unit": "pnpm --filter @cosmos-journeyer/game test:unit",
        "test:coverage": "pnpm --filter @cosmos-journeyer/game test:coverage",
        "test:e2e": "pnpm --filter @cosmos-journeyer/game test:e2e",
        "test:e2e:update": "pnpm --filter @cosmos-journeyer/game test:e2e:update",
        "test:e2e:docker": "pnpm --filter @cosmos-journeyer/game test:e2e:docker",
        "test:e2e:docker:update": "pnpm --filter @cosmos-journeyer/game test:e2e:docker:update",
        "doc": "pnpm --filter @cosmos-journeyer/game doc",
        "serve:doc": "pnpm --filter @cosmos-journeyer/game serve:doc",
        "lint": "pnpm --filter @cosmos-journeyer/game lint",
        "lint:fast": "pnpm --filter @cosmos-journeyer/game lint:fast",
        "typecheck:watch": "pnpm --filter @cosmos-journeyer/game typecheck:watch",
        "typecheck": "pnpm --filter @cosmos-journeyer/game typecheck",
        "prepare": "husky",
        "tauri:dev": "pnpm --filter @cosmos-journeyer/game tauri:dev",
        "tauri:build": "pnpm --filter @cosmos-journeyer/game tauri:build",
        "tauri:info": "pnpm --filter @cosmos-journeyer/game tauri:info",
        "tauri": "pnpm --filter @cosmos-journeyer/game exec -- tauri"
    },
    "devDependencies": {
        "@eslint/js": "^9.35.0",
        "@ianvs/prettier-plugin-sort-imports": "^4.7.0",
        "eslint": "^9.35.0",
        "eslint-import-resolver-typescript": "^4.4.4",
        "eslint-plugin-import": "^2.32.0",
        "globals": "^16.4.0",
        "husky": "^9.1.7",
        "lint-staged": "^16.1.6",
        "prettier": "^3.6.2",
        "typescript-eslint": "^8.43.0"
    },
    "lint-staged": {
        "*": "prettier --write --ignore-unknown"
    },
    "pnpm": {
        "onlyBuiltDependencies": [
            "husky"
        ]
    }
}
