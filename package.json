{
    "name": "cosmos-journeyer",
    "private": true,
    "version": "1.11.0-dev",
    "packageManager": "pnpm@10.18.0",
    "engines": {
        "node": ">=20.0.0"
    },
    "description": "Cosmos Journeyer is a space exploration game featuring fully explorable planets, across millions of star systems. It is built using Babylon.JS, and a lot of passion.",
    "homepage": "https://cosmosjourneyer.com",
    "author": {
        "name": "Barthélemy Paléologue",
        "email": "barth.paleologue@cosmosjourneyer.com",
        "url": "https://barth.paleologue.fr"
    },
    "license": "AGPL-3.0-only",
    "type": "module",
    "repository": {
        "type": "git",
        "url": "https://github.com/BarthPaleologue/CosmosJourneyer"
    },
    "bugs": {
        "url": "https://github.com/BarthPaleologue/CosmosJourneyer/issues",
        "email": "barth.paleologue@cosmosjourneyer.com"
    },
    "keywords": [
        "space",
        "game",
        "exploration",
        "babylonjs",
        "procedural-generation",
        "webgl",
        "webgpu"
    ],
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "build": "pnpm -r build",
        "build:game": "pnpm --filter @cosmos-journeyer/game build",
        "build:website": "pnpm --filter @cosmos-journeyer/website build",
        "build:prod": "tsx ./scripts/build-prod.ts",
        "serve:prod": "http-server dist -p 8080",
        "dev:game": "pnpm --filter @cosmos-journeyer/game serve",
        "dev:website": "pnpm --filter @cosmos-journeyer/website dev",
        "format": "pnpm -r format",
        "format:check": "pnpm -r format:check",
        "test:unit": "pnpm --filter @cosmos-journeyer/game test:unit",
        "test:coverage": "pnpm --filter @cosmos-journeyer/game test:coverage",
        "test:e2e": "pnpm --filter @cosmos-journeyer/game test:e2e",
        "test:e2e:update": "pnpm --filter @cosmos-journeyer/game test:e2e:update",
        "test:e2e:docker": "pnpm --filter @cosmos-journeyer/game test:e2e:docker",
        "test:e2e:docker:update": "pnpm --filter @cosmos-journeyer/game test:e2e:docker:update",
        "doc": "pnpm --filter @cosmos-journeyer/game doc",
        "lint": "pnpm -r run lint",
        "typecheck": "pnpm -r typecheck",
        "prepare": "husky",
        "tauri": "pnpm --filter @cosmos-journeyer/game exec -- tauri"
    },
    "devDependencies": {
        "@eslint/js": "^9.37.0",
        "@ianvs/prettier-plugin-sort-imports": "^4.7.0",
        "@next/eslint-plugin-next": "^15.5.4",
        "eslint": "^9.37.0",
        "eslint-import-resolver-typescript": "^4.4.4",
        "eslint-plugin-import": "^2.32.0",
        "globals": "^16.4.0",
        "http-server": "^14.1.1",
        "husky": "^9.1.7",
        "lint-staged": "^16.2.3",
        "prettier": "^3.6.2",
        "tsx": "^4.20.6",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.46.0"
    },
    "lint-staged": {
        "*": "prettier --write --ignore-unknown"
    },
    "pnpm": {
        "onlyBuiltDependencies": [
            "husky"
        ]
    }
}
