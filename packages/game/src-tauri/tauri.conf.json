{
  "$schema": "../../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "cosmos-journeyer",
  "version": "../package.json",
  "identifier": "com.cosmosjourneyer",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:8080",
    "beforeDevCommand": "pnpm --filter @cosmos-journeyer/game serve",
    "beforeBuildCommand": "pnpm --filter @cosmos-journeyer/game build"
  },
  "app": {
    "windows": [
      {
        "title": "cosmos-journeyer",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "deb",
      "app",
      "dmg",
      "msi",
      "nsis"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
