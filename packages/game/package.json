{
    "name": "@cosmos-journeyer/game",
    "private": true,
    "version": "1.11.0-dev",
    "description": "Cosmos Journeyer is a space exploration game featuring fully explorable planets, across millions of star systems. It is built using Babylon.JS, and a lot of passion.",
    "homepage": "https://cosmosjourneyer.com",
    "author": {
        "name": "Barthélemy Paléologue",
        "email": "barth.paleologue@cosmosjourneyer.com",
        "url": "https://barth.paleologue.fr"
    },
    "license": "AGPL-3.0-only",
    "type": "module",
    "repository": {
        "type": "git",
        "url": "https://github.com/BarthPaleologue/CosmosJourneyer"
    },
    "bugs": {
        "url": "https://github.com/BarthPaleologue/CosmosJourneyer/issues",
        "email": "barth.paleologue@cosmosjourneyer.com"
    },
    "keywords": [
        "space",
        "game",
        "exploration",
        "babylonjs",
        "procedural-generation",
        "webgl",
        "webgpu"
    ],
    "scripts": {
        "build": "rspack --mode=production --node-env=production",
        "serve": "rspack serve",
        "serve:prod": "http-server dist -p 8080",
        "format:check": "prettier . --check",
        "format": "prettier . --write",
        "test:unit": "vitest run",
        "test:coverage": "vitest run --coverage",
        "test:e2e": "playwright test",
        "test:e2e:update": "playwright test --update-snapshots",
        "test:e2e:docker": "docker build -t cosmos-journeyer-e2e -f ../../Dockerfile ../../ && docker run --rm --ipc=host -e CI=1 -w /app/packages/game -v \"$(pwd)/tests/e2e:/app/packages/game/tests/e2e\" -v \"$(pwd)/../../artifacts:/output\" cosmos-journeyer-e2e npx playwright test --output=/output --reporter=line,html",
        "test:e2e:docker:update": "docker build -t cosmos-journeyer-e2e -f ../../Dockerfile ../../ && docker run --rm --ipc=host -e CI=1 -w /app/packages/game -v \"$(pwd)/tests/e2e:/app/packages/game/tests/e2e\" -v \"$(pwd)/../../artifacts:/output\" cosmos-journeyer-e2e npx playwright test --output=/output --reporter=line,html --update-snapshots",
        "doc": "typedoc --options typedoc.json",
        "serve:doc": "http-server doc -p 8081",
        "lint": "eslint .",
        "lint:fast": "eslint . --rule \"import/no-cycle: 0\" --rule \"import/namespace: 0\" --cache",
        "typecheck:watch": "tsc --noEmit --watch",
        "typecheck": "tsc --noEmit"
    },
    "dependencies": {
        "@babylonjs/core": "^8.39.0",
        "@babylonjs/gui": "^8.39.0",
        "@babylonjs/havok": "^1.3.10",
        "@babylonjs/inspector": "^8.39.0",
        "@babylonjs/loaders": "^8.39.0",
        "@babylonjs/materials": "^8.39.0",
        "@babylonjs/node-editor": "^8.39.0",
        "@brianchirls/game-input": "^0.1.1",
        "d3": "^7.9.0",
        "extended-random": "^1.2.2",
        "fast-simplex-noise": "^4.0.0",
        "i18next": "^25.6.3",
        "qrcode": "^1.5.4",
        "squirrel-noise": "^1.0.0",
        "terrain-generation": "workspace:^",
        "zod": "^4.1.13"
    },
    "devDependencies": {
        "@eslint/js": "^9.39.1",
        "@ianvs/prettier-plugin-sort-imports": "^4.7.0",
        "@playwright/test": "^1.57.0",
        "@rspack/cli": "^1.6.5",
        "@rspack/core": "^1.6.5",
        "@tauri-apps/cli": "^2.9.4",
        "@types/d3": "^7.4.3",
        "@types/qrcode": "^1.5.6",
        "@types/webpack": "^5.28.5",
        "@types/webpack-env": "^1.18.8",
        "@vitest/coverage-v8": "^4.0.14",
        "eslint": "^9.39.1",
        "eslint-import-resolver-typescript": "^4.4.4",
        "eslint-plugin-import": "^2.32.0",
        "globals": "^16.5.0",
        "http-server": "^14.1.1",
        "jsdom": "^27.2.0",
        "prettier": "^3.7.1",
        "sass": "^1.94.2",
        "sass-loader": "^16.0.6",
        "ts-checker-rspack-plugin": "^1.2.0",
        "ts-node": "^10.9.2",
        "ts-shader-loader": "^2.0.2",
        "typedoc": "^0.28.14",
        "typedoc-github-theme": "^0.3.1",
        "typedoc-plugin-missing-exports": "^4.1.2",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.48.0",
        "vite-tsconfig-paths": "^5.1.4",
        "vitest": "^4.0.14"
    }
}
