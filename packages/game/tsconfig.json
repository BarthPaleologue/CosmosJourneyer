{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "baseUrl": "./",
        "paths": {
            "@/*": ["src/ts/*"],
            "@assets/*": ["src/asset/*"],
            "@shaders/*": ["src/shaders/*"],
            "@styles/*": ["src/styles/*"]
        },
        "typeRoots": ["./node_modules/@types"],
        "types": ["webpack-env"]
    },
    "include": ["src/**/*.ts", "tests/**/*.ts", "vitest.config.ts", "playwright.config.ts"],
    "exclude": ["node_modules", "dist"]
}
