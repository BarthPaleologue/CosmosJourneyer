{
    "name": "@cosmos-journeyer/website",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "dev": "next dev",
        "build": "next build",
        "start": "next start",
        "lint": "eslint . --max-warnings=0",
        "lint:fix": "eslint . --max-warnings=0 --fix",
        "format": "oxfmt . --write",
        "format:check": "oxfmt . --check",
        "typecheck": "tsc --noEmit",
        "typecheck:watch": "tsc --noEmit --watch",
        "test:all": "pnpm lint && pnpm typecheck && pnpm build",
        "serve:prod": "http-server out"
    },
    "dependencies": {
        "next": "^16.1.5",
        "react": "^19.2.0",
        "react-dom": "^19.2.0",
        "sass": "^1.93.2",
        "sharp": "^0.34.4"
    },
    "devDependencies": {
        "@types/node": "^24.8.0",
        "@types/react": "^19.2.2",
        "@types/react-dom": "^19.2.2"
    }
}
