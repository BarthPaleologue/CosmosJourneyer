{
    "compilerOptions": {
        // Basic & ESM
        "target": "ES2024",
        "module": "ES2022",
        "moduleResolution": "bundler",
        "rootDir": ".",
        "outDir": "./dist",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,

        // Ideation-friendly imports
        "baseUrl": "./",
        "paths": {
            "@/backend": ["packages/backend/src/index.ts"],
            "@/backend/*": ["packages/backend/src/*"],
            "@/frontend/*": ["packages/frontend/src/*"],
            "@/i18n": ["packages/game/src/i18n.ts"],
            "@/settings": ["packages/game/src/settings.ts"],
            "@/utils/*": ["packages/utils/src/*"],
            "@/*": ["packages/game/src/*"],
            "@assets/*": ["packages/frontend/public/assets/*"],
            "@shaders/*": ["packages/frontend/public/shaders/*"],
            "@styles/*": ["packages/frontend/src/styles/*"]
        },

        // Build speed & debugging
        "incremental": true,
        "sourceMap": true,
        "tsBuildInfoFile": "./dist/.tsbuildinfo",

        // Strong typing
        "strict": true,
        "exactOptionalPropertyTypes": true,
        "noImplicitOverride": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "noUncheckedIndexedAccess": true,
        "noPropertyAccessFromIndexSignature": true,

        // Quality guardrails
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": true,
        "skipLibCheck": true, // disable if you run into lib-type mismatches
        "resolveJsonModule": true,
        "noUncheckedSideEffectImports": true,
        "verbatimModuleSyntax": true,
        "moduleDetection": "force",

        // Browser & ambient types
        "lib": ["ES2024", "DOM", "DOM.Iterable", "WebWorker"],
        "typeRoots": ["node_modules/@types"],
        "types": ["webpack-env"]
    },
    "include": [
        "packages/**/*.ts",
        "packages/**/*.d.ts",
        "src/**/*.ts",
        "tests/**/*.ts",
        "vitest.config.ts",
        "playwright.config.ts"
    ],
    "exclude": ["node_modules", "dist"]
}
